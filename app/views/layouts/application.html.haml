!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{'http-equiv': 'X-UA-Compatible', content:'IE=edge'}
    %meta{name: 'viewport', content: 'width=device-width', 'initial-scale': '1'}
    =csrf_meta_tags

    = stylesheet_link_tag     'normalize', media: 'all'
    = stylesheet_link_tag     'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag  'application', 'data-turbolinks-track': 'reload'

    %title= 'What would you do if your income were taken care of?'
    / HTML5 shiv and Respond.js for IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      %script{:src => 'https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js'}
      %script{:src => 'https://oss.maxcdn.com/respond/1.4.2/respond.min.js'}
  %body
    %nav{class: 'navbar fixed-top navbar-expand-md navbar-mge navbar-mge-space', role: 'navigation'}
      %a{class: 'navbar-brand d-none d-sm-block', href: root_path}
        = 'What would you do if your income were taken care of?'
      %a{class: 'navbar-brand navbar-mobile-brand d-sm-none', href: root_path}
        %strong= 'What would you do'
        = 'if your income were taken care of?'
      %button{class: 'navbar-toggler', 'data-target': '.navbar-collapse', 'data-toggle': 'collapse', type: 'button'}
        â˜°
      .collapse.navbar-collapse
        %ul.navbar-nav.ml-auto
          - [['Start', root_path]].each_with_index do | item, index |
            %li.nav-item{class: index==0?'active':''}
              = link_to(item[0], item[1], class: 'nav-link')
            - if user_signed_in?
              %li.nav-item
                = link_to('My Dreams', user_dreams_path, class: 'nav-link')
              %li.nav-item
                = link_to('Edit Profile', edit_user_registration_path, class: 'nav-link')
              %li.nav-item
                = link_to('Logout', destroy_user_session_path, method: :delete, class: 'nav-link')
            - else
              %li.nav-item
              = link_to('Register', new_user_registration_path, class: 'nav-link')
              %li.nav-item
              = link_to('Login', new_user_session_path, class: 'nav-link')
    %section.container-fluid
      .row.col-lg-12
        - if notice
          %p#notice.alert.alert-info= notice
        - if alert
          %p#alert.alert.alert-warning= alert

    = yield

  -if Rails.env.development?
    = render 'shared/development_inspection'
  -if Rails.env.production?
